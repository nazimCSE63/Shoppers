@model OrderEditModel
@{
    ViewData["Title"] = "Confirm Order";
    ViewData["PageNav"] = "ConfirmOrder";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">The order is Confirm</h3>
    </div>

    <form role="form" asp-controller="order" asp-action="edit" method="POST" asp-antiforgery="true">
        <div id="form" class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
             <input asp-for="Id" type="hidden"/>
            <div class="form-group" style="display:none;>
                <label asp-for="Id">OrderId</label>
                <input type="text" class="form-control" asp-for="Id">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;>
                <label asp-for="CustomerId">CustomerId</label>
                <input type="text" class="form-control" asp-for="CustomerId">
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
                <div class="form-group" style="display:none;>
            <label asp-for="CustomerName">CustomerName</label>
            <input type="text" class="form-control" asp-for="CustomerName">
            <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
             <div class="form-group" style="display:none;>
            <label asp-for="ProductId">ProductId</label>
            <input type="text" class="form-control" asp-for="ProductId">
            <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
             <div class="form-group" style="display:none;>
            <label asp-for="ProductName">ProductName</label>
            <input type="text" class="form-control" asp-for="ProductName">
            <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
            <input type="hidden" class="form-control" asp-for="Status" value="Confirm">
            </div>

            <div class="form-group" style="display:none;>
            <label asp-for="Status">Status</label>
            <input type="text" class="form-control" asp-for="Status">
            <span asp-validation-for="Status" class="text-danger"></span>
            </div>

        </div>
        <div class="card-footer">
             <a asp-action="Index" asp-controller="Order" asp-area="Admin" class="btn btn-default">Cancel</a>
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </form>
</div>