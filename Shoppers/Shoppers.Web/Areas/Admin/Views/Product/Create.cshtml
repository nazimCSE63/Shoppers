@model ProductCreateModel
@{
    ViewData["Title"] = "Create New Product";
    ViewData["PageNav"] = "Create Product";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Product</h3>
    </div>

    <form role="form" asp-controller="Product" asp-action="create" method="POST" enctype="multipart/form-data" asp-antiforgery="true">
        <div id="form" class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="ShortDescription">ShortDescription</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="ShortDescription">
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="SKU">SKU(Stock Keeping Unit)</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="SKU">
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Size">Size</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="Size">
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Color">Color</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="Color">
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <div class="dropdown col-md-6">
                    <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <div class="col-md-6">
                    <input type="text" class="form-control" asp-for="Quantity" min="0">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Image">Image</label>
                <div class="input-group col-md-6">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" asp-for="ImageFile">
                        <label class="custom-file-label" asp-for="Image">Choose file</label>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>