@using Shoppers.Web.Models
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
  <!-- google icon link -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="~/adminlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="~/adminlte/css/adminlte.min.css">
}
<div class="" style="display:flex;flex-wrap: wrap;">
<div class="register-box" style="margin-left:170px;margin-top:30px;margin-bottom:20px;">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a asp-area="" asp-controller="Account" asp-action="Register" class="h1"><b>Signup</b></a>
    </div>
    <div class="card-body">

     <form id="registerForm" asp-action="Register" asp-controller="Account" 
           asp-area="" asp-antiforgery="true" asp-route-returnUrl="@Model.ReturnUrl" method="post">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="input-group mb-3">
           <input asp-for="AdminName" class="form-control" autocomplete="Admin Name" aria-required="true" placeholder="Admin Name" />
           <span asp-validation-for="AdminName" class="text-danger"></span>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="StoreName" class="form-control" autocomplete="Store Name" aria-required="true" placeholder="Store Name" />
          <span asp-validation-for="StoreName" class="text-danger"></span>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="material-icons" style="margin-left:-10px;">store</span>
            </div>
          </div>
        </div>
       <div class="input-group mb-3">
         <input asp-for="Address" class="form-control" autocomplete="Address" aria-required="true" placeholder="Address" />
         <span asp-validation-for="Address" class="text-danger"></span>
         <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-map-marker-alt"></span>
        </div>
        </div>
      </div>
      <div class="input-group mb-3">
        <input asp-for="PhoneNumber" class="form-control" autocomplete="Phone Number" aria-required="true" placeholder="Phone Number"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <div class="input-group-append">
         <div class="input-group-text">
           <span class="fas fa-phone-alt"></span>
        </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <input asp-for="Email" class="form-control" autocomplete="Email" aria-required="true" placeholder="Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="input-group-append">
         <div class="input-group-text">
           <span class="fas fa-envelope"></span>
        </div>
        </div>
     </div>
     <div class="input-group mb-3">
       <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
       <span asp-validation-for="Password" class="text-danger"></span>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
     <div class="input-group mb-3">
        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Retype password"/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <div class="input-group-append">
         <div class="input-group-text">
            <span class="fas fa-lock"></span>
        </div>
        </div>
     </div>
        <div class="row">
          <div class="col-8">

          </div>
          <!-- /.col -->
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
          <!-- /.col -->
        </div>
      </form>



      <a asp-area="" asp-controller="Account" asp-action="Login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

   <div class="col-md-6 col-md-offset-2" style="margin-top:30px;margin-left:30px;">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-area="Identity" asp-page="/Account/ExternalLogin" asp-route-returnUrl="admin/dashboard/index" method="post" class="form-horizontal">
                    
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- jQuery -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/adminlte/js/adminlte.min.js"></script>
}